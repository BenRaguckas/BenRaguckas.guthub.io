.about-section{display:block}.about-heading{margin-top:1em;font-family:raleway,sans-serif}.about-heading hr{margin-bottom:1rem}.about-desc{margin-bottom:1rem}.language-buttons{width:100%;display:flex;justify-content:space-between}.language-item{margin:0 auto;height:72px;aspect-ratio:1;display:block;padding:10px;text-align:center;background-color:rgba(0,0,0,.25);border-radius:20px;cursor:pointer}.language-item img{height:100%;border-radius:12px;aspect-ratio:auto}.language-item:hover{background-color:rgba(77,77,77,.25)}.language-section{margin:10px;border:4px solid rgba(0,0,0,.5);border-radius:10px;background-color:rgba(22,17,31,.2);padding:10px;list-style-position:inside;list-style-type:circle}.timeline-table{margin:0 auto;width:90%;text-align:left;border-collapse:collapse;border-width:2px;border-style:solid;border-color:#27272a}.timeline-table tr:nth-child(2n):not(:first-child):hover{cursor:pointer;background-color:rgba(255,255,255,.1)}.timeline-table tr:nth-child(2n+1):not(:first-child){background-color:rgba(34,0,255,.1)}.timeline-table tr:nth-child(4n):not(:first-child){background-color:rgba(255,255,255,.1)}.timeline-description{overflow:hidden;transition:all .5s}.skills-block{margin:0 auto;width:95%;border-radius:8px;overflow:hidden;box-shadow:0 4px 4px -2px rgba(0,0,0,.5)}.skills-item{list-style-position:inside;list-style-type:circle;width:100%;color:#ffeaea;overflow:hidden}.skills-item-label{display:flex;justify-content:space-between;padding:1em;background:#333338;font-weight:700;cursor:pointer}.skills-item-label:hover{background:#4b4b53}.skills-item-label::after{content:"\276F";width:1em;height:1em;text-align:center;transition:all .35s}.skills-item-content{max-height:0;padding:0 1em;color:#ffeaea;background:#3e3c3a;transition:all .35s}.skills-item input{position:absolute;opacity:0;z-index:-1}.skills-item input:checked+.skills-item-label{background:#4b4b53}.skills-item input:checked+.skills-item-label::after{transform:rotate(90deg)}.skills-item input:checked~.skills-item-content{max-height:100vh;padding:1em}